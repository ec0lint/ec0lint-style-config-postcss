# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = false

# 2 space indentation
[*.{html,css,js,jsx,ts,tsx,json,yml,md,vue}]
indent_style = space
indent_size = 2
